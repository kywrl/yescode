    local body=$(echo "$response" | sed '$d')

    if [[ "$http_code" == "401" ]]; then
        # è¿”å›ç‰¹æ®Šæ ‡è®°è¡¨ç¤ºè®¤è¯å¤±è´¥
        echo "AUTH_ERROR_401"
